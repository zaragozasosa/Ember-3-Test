<div class="basic-table">
  {{#if showFilters}}
    <div class="row">


      {{#each columns as |col|}}
        {{#if col.filter}}
          <div class="col-3">
            <BasicTableFilter @column={{col}} />
          </div>
        {{/if}}
      {{/each}}
    </div>
  {{/if}}

  {{#if this.filteredRows}}
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          {{#each this.columns as |column|}}
            <th>
              {{column.title}}
            </th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each this.filteredRows as |row|}}
          <tr role="button" onclick={{action "rowClick" row}} class="data-row">
            {{#each this.columns as |column|}}
              <td>
                <BasicTableCell @row={{row}} @column={{column}} />
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{else}}
    <div class="alert alert-warning" role="alert">
      There are no available rows to show.
    </div>
  {{/if}}
</div>