<div class="basic-table">
  {{#if this.rows}}
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          {{#each this.columns as |column|}}
            <th>
              {{column.title}}
            </th>
          {{/each}}
        </tr>
      </thead>
      <tbody>
        {{#each this.rows as |row|}}
          <tr onclick={{action "rowClick" row}} class="data-row">
            {{#each this.columns as |column|}}
              <td>
                <BasicTableCell @row={{row}} @column={{column}} />
              </td>
            {{/each}}
          </tr>
        {{/each}}
      </tbody>
    </table>
  {{/if}}
</div>